#!/bin/bash
# shellcheck disable=all

set -euo pipefail

SCRIPT="${XDG_DATA_HOME:-$HOME/.local/share}/grimoire/tmux_statusline.sh"

if [ -x "$SCRIPT" ]; then
  export TMUX_COLOR_LEFT_FG={{ .palette.base00 }}
  export TMUX_COLOR_LEFT_BG={{ .palette.base0B }}

  export TMUX_COLOR_MAIN_FG={{ .palette.base04 }}
  export TMUX_COLOR_MAIN_BG={{ .palette.base01 }}

  export TMUX_COLOR_ACTIVE_FG={{ .palette.base07 }}
  export TMUX_COLOR_ACTIVE_BG={{ .palette.base00 }}

  export TMUX_COLOR_SEG_1_FG={{ .palette.base04 }}
  export TMUX_COLOR_SEG_1_BG={{ .palette.base01 }}

  export TMUX_COLOR_SEG_2_FG={{ .palette.base04 }}
  export TMUX_COLOR_SEG_2_BG={{ .palette.base01 }}

  export TMUX_COLOR_SEG_3_FG={{ .palette.base04 }}
  export TMUX_COLOR_SEG_3_BG={{ .palette.base02 }}

  tmux set -g message-style bg=black,fg=white

  "$SCRIPT"
else
  echo "ðŸ“– No viable script in sight... ($SCRIPT)"
  exit 1
fi

