#!/bin/bash
# shellcheck disable=all

set -euo pipefail

SCRIPT="${XDG_DATA_HOME:-$HOME/.local/share}/grimoire/tmux_statusline.sh"

if [ -x "$SCRIPT" ]; then
  export TMUX_COLOR_LEFT_FG={{ .palette.base06 }}
  export TMUX_COLOR_LEFT_BG={{ .palette.base02 }}

  export TMUX_COLOR_MAIN_FG={{ .palette.base04 }}
  export TMUX_COLOR_MAIN_BG={{ .palette.base01 }}

  export TMUX_COLOR_ACTIVE_FG={{ .palette.base05 }}
  export TMUX_COLOR_ACTIVE_BG={{ .palette.base00 }}

  export TMUX_COLOR_SEG_1_FG={{ .palette.base04 }}
  export TMUX_COLOR_SEG_1_BG={{ .palette.base01 }}

  export TMUX_COLOR_SEG_2_FG={{ .palette.base04 }}
  export TMUX_COLOR_SEG_2_BG={{ .palette.base01 }}

  export TMUX_COLOR_SEG_3_FG={{ .palette.base06 }}
  export TMUX_COLOR_SEG_3_BG={{ .palette.base03 }}

  "$SCRIPT"

  tmux set-option -g message-style fg={{ .palette.base00 }},bg=colour11
  tmux set-option -g message-command-style fg={{ .palette.base00 }},bg=colour2
  tmux set-option -g mode-style fg={{ .palette.base00 }},bg=colour11
else
  echo "ðŸ“– No viable script in sight... ($SCRIPT)"
  exit 1
fi

